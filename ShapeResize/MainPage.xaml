<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShapeResize.MainPage">

    <VerticalStackLayout Spacing="5" Padding="20">
        <Border StrokeThickness="2" Stroke="Green">
            <Line x:Name="line" StrokeThickness="4" Stroke="Red" X2="100" Y2="50" />
        </Border>
        <HorizontalStackLayout>
            <Button Text="Line Height Add 50" Clicked="Button_Clicked_Add" />
            <Button Text="Line Height Subtract 50" Clicked="Button_Clicked_Subtract" />
        </HorizontalStackLayout>
    </VerticalStackLayout>

</ContentPage>
